<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.appmobile_amanigharbi.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.appmobile_amanigharbi.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.appmobile_amanigharbi.ui.notifications.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_calander"
        android:name="com.example.appmobile_amanigharbi.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.appmobile_amanigharbi.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.example.appmobile_amanigharbi.ui.profile.EditProfileFragment"
        tools:layout="@layout/fragment_edit_profile" />
</navigation>